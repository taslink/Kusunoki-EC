<div class="container-fluid">
  <div class="row envelope-box-row">
    <% product_envelopes.each do |envelope| %>
    <div class="envelope-box col-xl-3 col-sm-4 col-xs-6">
      <%= image_tag envelope.main_image.url %>
      <div class="detail">
        <p class="name">
          <%= envelope.name %>
        </p>
      </div>
    </div>
    <% end %>
  </div>
</div>