<div class="container">
    
    <h1>Editing User</h1>
    
    <% if flash[:notice] %>
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <div class="alert alert-danger">
          <%= flash[:notice] %>
        </div>
      </div>
    </div>
    <% end %>
    
    <div class="row">
      <div class="col-sm-7">
        <%= render 'form' %>
      </div>
      <div class="col-sm-5">
        <h3>配送先情報 <%= link_to '登録・変更', edit_address_path(current_user), class: "btn btn-default btn-xs" %> </h3>
        <% if current_user.address.nil? %>
        <hr />
        <p><strong>受取人名：</strong>  <span class="text-muted">未登録</span></p>
        <p><strong>郵便番号：</strong>  <span class="text-muted">未登録</span></p>
        <p><strong>住所：</strong>  <span class="text-muted">未登録</span></p>
        <p><strong>建物：</strong>  <span class="text-muted">未登録</span></p>
        <hr />
        <% else %>
        <hr />
        <p><strong>受取人名：</strong> <%= current_user.address.addressee %></p>
        <p><strong>郵便番号：</strong> <%= current_user.address.zipcode %></p>
        <p><strong>住所：</strong> <%= current_user.address.prefecture %> <%= current_user.address.city %> <%= current_user.address.street %></p>
        <p><strong>建物：</strong> <%= current_user.address.building %></p>
        <hr />    
        <% end %>
        <div>
          <%= link_to '買い物ページに戻る', root_path %>
        </div>
      </div>
    </div>
    
</div>