<header>
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <h1 class="logo">
          <%= link_to "KusunokiEC", root_path %>
        </h1>
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#site-menu">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="collapse navbar-collapse" id="site-menu">
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to root_path do %>
            <i class="glyphicon glyphicon-home"></i> Home
            <% end %>
          </li>
          <li>
            <%= link_to carts_path do %>
            <i class="glyphicon glyphicon-shopping-cart"></i> Cart
            <% end %>
          </li>
          <li>
            <%= link_to pages_about_path do %>
            <i class="glyphicon glyphicon-question-sign"></i> About
            <% end %>
          </li>
          
          <li class="dropdown">
            <% if logged_in? %>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="glyphicon glyphicon-user"></i> <%= current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
            <% else %>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="glyphicon glyphicon-edit"></i> Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Log in", login_path %></li>
              <li class="divider"></li>
              <li><%= link_to "New Account", signup_path %></li>
            </ul>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>