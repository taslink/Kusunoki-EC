<div class="container">

<p id="notice"><%= notice %></p>

<h1>Listing Addresses</h1>

<table class="table">
  <thead>
    <tr>
      <th>Id　</th>
      <th>User_id　</th>
      <th>User_name　</th>
      <th>Addressee　</th>
      <th>Zipcode　</th>
      <th>Prefecture　</th>
      <th>City　</th>
      <th>Street　</th>
      <th>Building　</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.id %></td>
        <td><%= address.user_id %></td>
        <% if address.user_id.nil? %>
        <td></td>
        <% else %>
        <td><%= address.user.name %></td>
        <% end %>
        <td><%= address.addressee %></td>
        <td><%= address.zipcode %></td>
        <td><%= address.prefecture %></td>
        <td><%= address.city %></td>
        <td><%= address.street %></td>
        <td><%= address.building %></td>
        <td><%= link_to 'Show　', address %></td>
        <td><%= link_to 'Edit　', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', new_address_path %>

</div>