<div class="container-fluid">
  <div class="row">
    <% product_envelopes.each do |envelope| %>
    <div class="envelope-box col-xl-3 col-sm-4 col-xs-6">
      <div class="detail">
        <p class="name">
          <%= envelope.name %>
        </p>
        <p class="description">
          <%= envelope.description %>
        </p>
      </div>
    </div>
    <% end %>
  </div>
</div>