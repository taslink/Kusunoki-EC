<div id="contents_pb">
  <div class="container"> 
    
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <h1>お問い合わせ完了</h1>
        <hr />
      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <p class="h4">以下の内容で承りました。</p>
      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">  
        <table class="table">
          <tr>
            <th style="width:30%;">名前</th>
            <td style="width:70%;"><%= @inquiry.name %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @inquiry.email %></td>
          </tr>
          <tr>
            <th>お問い合わせ内容</th>
            <td><%= simple_format(@inquiry.message) %></td>
          </tr>
        </table>
        <hr />
        <div class="actions_min text-center">
          <%= link_to 'TOPページに戻る', :root , class: "btn btn-default btn-lg"%>
        </div>
      </div>
    </div>
    
  </div>
</div>