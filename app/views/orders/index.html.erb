<h1>Listing Orders</h1>

<table>
<thead>
<tr>
<th>管理番号(id)</th>
<th>User_id</th>
<th>Total_Price</th>
<th>Created_at</th>
<th colspan="2"></th>
</tr>
</thead>

<tbody>
<% @orders.each do |order| %>
<tr>
<td><%= order.id %></td>
<td><%= order.user_id %></td>
<td><%= order.total_price %></td>
<td><%= order.created_at %></td>
<td><%= link_to 'Show', order %></td>
<td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>
<% end %>

</tbody>
</table>