<div id="contents_pb">
<div class="container">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <h1>Log in</h1>
        <hr />
      </div>
    </div>
    
    <% if flash[:notice] %>
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <div class="alert alert-danger">
          <%= flash[:notice] %>
        </div>
      </div>
    </div>
    <% end %>
    
    <div class="row">
      <div class="col-sm-6 col-sm-offset-2">
        <%= form_for(:session, url: login_path) do |f| %>
          <div class="field">
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>
          </div>
          <div class="field">
            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <div class="actions">
            <%= f.submit "Log in", class: "btn btn-primary" %>
          </div>    
        <% end %>
      </div>
      <div class="col-sm-2">
        <p class="h5">初めての方はこちら！</p> 
        <%= link_to "New Account Sign up!", signup_path, class: "btn btn-default"%> 
      </div>
    </div>
    
</div>
</div><!-- contents_pb -->