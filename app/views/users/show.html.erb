<div class="container">
    
    <% if flash[:notice] %>
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <div class="alert alert-danger">
          <%= flash[:notice] %>
        </div>
      </div>
    </div>
    <% end %>
    
    <div class="row">
      <div class="col-sm-12">
        <p><strong>Name:</strong><%= @user.name %></p>
        <p><strong>Email:</strong><%= @user.email %></p>
        <%= link_to 'Edit', edit_user_path(@user) %> | <%= link_to 'Back', users_path %>
      </div>
    </div>
    
</div>