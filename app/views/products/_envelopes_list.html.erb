<div class="container-fluid">
  <div class="row envelope-box-row">
    <% product_envelopes.each do |envelope| %>
    <div class="envelope-box col-xs-6 col-md-4">
      <% if envelope.main_image.present? %>
        <%= link_to image_tag(envelope.main_image) , envelope %>
      <% else %>
        <%= link_to image_tag("no-image-envelope.png") , envelope %>
      <% end %>
      <div class="detail">
        <p class="name">
          <%= envelope.name %>
        </p>
      </div>
    </div>
    <% end %>
  </div>
</div>